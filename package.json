{
    "name": "resmoke",
    "version": "0.0.1-alpha.1",
    "description": "A test-case-based, action-based and in-browser front-end e2e test framework for single-page web applications",
    "main": "./dist/bundle.js",
    "author": "AndyRightNow",
    "license": "MIT",
    "scripts": {
        "prettier": "prettier ./src/**/*.ts --write",
        "lint": "tslint -p ./tsconfig.json --fix",
        "test": "cross-env DEBUG=resmoke:* jest -i",
        "test:browser:dev": "karma start ./config/karma/karma.conf.js",
        "test:browser": "karma start ./config/karma/karma.conf.js --singleRun --no-auto-watch --log-level error --browsers ChromeHeadless",
        "ts-check": "tsc --noEmit",
        "build": "webpack --config ./config/webpack/webpack.config.prod.js --verbose --display-modules --sort-assets-by size --sort-chunks-by size --sort-modules-by size",
        "precommit": "npm run prettier && npm run lint && npm run ts-check && npm run build && git add .",
        "prepush": "npm run precommit && npm run test:browser",
        "bump": "node scripts/bump.js"
    },
    "private": false,
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.34",
        "@babel/preset-env": "^7.0.0-beta.34",
        "@types/ajv": "^1.0.0",
        "@types/chai": "^4.0.5",
        "@types/debug": "^0.0.30",
        "@types/jest": "^21.1.6",
        "@types/lodash": "^4.14.87",
        "@types/node": "^8.0.54",
        "@types/sizzle": "^2.3.1",
        "awesome-typescript-loader": "^3.4.1",
        "babel-core": "^6.26.0",
        "babel-loader": "8.0.0-beta.0",
        "chai": "^4.1.2",
        "cross-env": "^5.1.1",
        "debug": "^3.1.0",
        "husky": "^0.14.3",
        "jasmine-core": "^2.8.0",
        "jest": "^21.2.1",
        "karma": "^1.7.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-cli": "^1.0.1",
        "karma-jasmine": "^1.1.1",
        "karma-mocha-reporter": "^2.2.5",
        "karma-webpack": "^2.0.6",
        "prettier": "^1.8.2",
        "puppeteer": "^0.13.0",
        "rollup": "^0.51.8",
        "semver": "^5.4.1",
        "ts-jest": "^21.2.3",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "uglifyjs-webpack-plugin": "^1.1.2",
        "webpack": "^3.9.1"
    },
    "dependencies": {
        "ajv": "^5.4.0",
        "lodash": "^4.17.4",
        "sizzle": "^2.3.3"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/*.{ts}",
            "!**/*.{d.ts}",
            "!**/__tests__/**",
            "!**/node_modules/**"
        ],
        "verbose": true,
        "moduleDirectories": [
            "node_modules"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/__tests__/.*\\.spec\\.(ts)$",
        "testPathIgnorePatterns": [
            "/browser/"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "globals": {
            "PRODUCTION": false
        }
    }
}
