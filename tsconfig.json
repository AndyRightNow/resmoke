{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build",
      "rootDir": "./src",
      "typeRoots": [
          "node_modules/@types",
          "src/@types"
      ],
      "removeComments": true,
      "preserveConstEnums": true,
      "target": "es2015",
      "sourceMap": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "declaration": false
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}